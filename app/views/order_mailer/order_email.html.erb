<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @line_items.each do |item| %>
          <tr>
            <td>
              <h4><%= item[:product].name %></h4>
              <br>
              <p><%= item[:product].description %></p>
            </td>
            <td>
              <%= humanized_money_with_symbol item[:product].price %>
            </td>
            <td>
              <%= item[:quantity].to_i %>
            </td>
            <td>
              <%= humanized_money_with_symbol item[:product].price * item[:quantity].to_i %>
            </td>
          </tr>            
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol @order.total %>
          </th>
        </tr>
        <tr>
          <th colspan="2">
            EMAIL:
          </th>
          <th colspan="2">
            <%= @order.email %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
</section>  